<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.StartActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="784dp"
        android:layout_height="788dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/black" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="377dp"
        android:layout_height="711dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/white_bg" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="74dp"
        android:layout_height="77dp"
        android:layout_marginStart="237dp"
        android:layout_marginTop="-690dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/white_circle" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="53dp"
        android:layout_height="57dp"
        android:layout_marginStart="-129dp"
        android:layout_marginTop="-68dp"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="94dp"
        android:layout_height="59dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-685dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/title" />

    <Button
        android:id="@+id/startbtn"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_marginStart="116dp"
        android:background="@color/black"
        android:text="PLAY"
        android:textColor="@color/white"
        android:textSize="30px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="213dp"
        android:layout_height="86dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="-505dp"
        android:text="Welcome to Chess Mate game, designed for two players to enjoy! With this app, you can experience the excitement of one of the world's oldest and most beloved games anytime, anywhere. Challenge a friend, family member, or colleague to a game and test your skills against each other. Our app is easy to use and offers intuitive controls, so you can focus on the strategy and gameplay. Whether you're a seasoned chess pro or a beginner, our app is the perfect way to sharpen your skills and have fun with someone else. Let's get started!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText2"
        android:layout_width="202dp"
        android:layout_height="49dp"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="-10dp"
        android:hint="Name"
        android:textSize="35px"
        app:layout_constraintStart_toStartOf="@+id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-320dp"
        android:layout_marginTop="-400dp"
        android:text="Name of the 1st player:"
        android:textColor="@color/black"
        android:textSize="40px"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-320dp"
        android:layout_marginTop="38dp"
        android:text="Name of the 2nd player:"
        android:textColor="@color/black"
        android:textSize="40px"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/textInputEditText2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="201dp"
        android:layout_height="50dp"
        android:layout_marginStart="-323dp"
        android:hint="Name"
        android:textSize="35px"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />


</androidx.constraintlayout.widget.ConstraintLayout>